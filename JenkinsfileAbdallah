pipeline {
	agent any
	stages {
		  stage('maven clean') {
		 steps {
			sh 'mvn clean'
			  }
		  }
		stage('maven package') {
		 steps {
			sh 'mvn package'
			  }
		  }
		stage('maven compile') {
		 steps {
			sh 'mvn compile'
			  }
		  }
		stage ('maven test') {
      		 steps {
       			 sh 'mvn test'
     			  }
  		  }
		 stage("Maven Sonarqube") {
            steps {
                script {
                    sh "mvn -f'pom.xml' sonar:sonar -Dsonar.login=admin -Dsonar.password=Admin"
                }
            }
        }
		stage('Nexus') {
		 steps {
			sh 'mvn deploy -DskipTests'
			  }
			  }
			   stage('Build Docker'){
           	  steps{
               		 sh 'docker build -t abdallahouaili/projectdevops .'
            	}
      		  }
		stage('Docker Login'){
            	steps{
			
                sh 'docker login -u abdallahouaili -p Abdallah123'
            }
        }
		 stage('Docker Push'){
            	 steps{	
                	sh 'docker push abdallahouaili/projectdevops'
          	  }
     		   }
		stage('Start container') {
            	 steps {
                sh 'docker-compose up -d '
     		 }
		  }
			 
}
}
